pipeline {
    agent {
        docker { image 'node:14' }
    }

    stages {
        stage('Preparing') {
            steps {
                sh 'rm -rf dist'
                git branch: 'dev', credentialsId: 'gitlab-jenkins-lightsail', url: '${BOOMERANG_REPO_URL}'
                sh 'yarn install'
            }
        }
        stage('Building') {
            steps {
                sh 'yarn build'
            }
        }        
        stage('Archiving') {
            steps {
                archiveArtifacts artifacts: 'dist/**/*', followSymlinks: false
            }
        }
    }
}
